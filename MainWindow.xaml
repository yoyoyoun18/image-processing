<Window x:Class="ImageProcessingByOpenCV.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessingByOpenCV"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="DisplayImage" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button Content="Load Image" Click="LoadImage_Click" Margin="5"/>
            <Button Content="Apply Grayscale" Click="ApplyGrayscale_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
